            .Skip((currentPage - 1) * itemsPerPage)
            .Take(itemsPerPage)
            .ToList();
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            PaginateRooms();
            StateHasChanged(); // Cập nhật UI
        }
    }


    private void PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            PaginateRooms();
            StateHasChanged(); // Cập nhật UI
