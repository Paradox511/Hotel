        filteredRoomList = Rooms.Where(room =>
            room.MaPhong.ToString().Contains(searchValue) ||
            room.SoPhong.ToString().Contains(searchValue) ||
            room.MaLoaiPhong.ToString().Contains(searchValue)
        ).ToList();

