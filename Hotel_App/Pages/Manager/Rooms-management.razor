            return true; // Trả về true để tránh tạo phòng
        }

        // Đếm số phòng hiện tại đã tạo cho loại phòng này
        int currentRoomCount = Rooms.ToList().Where(r => r.MaLoaiPhong == maLoaiPhong).Count();

        // if (png.MaPhong==0)
