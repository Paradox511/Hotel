    private bool IsRoomLimitReached(int maLoaiPhong)
    {
        // Lấy loại phòng tương ứng từ danh sách loaiphong

        var loaiPhong = loaiphong.Where(lp => lp.MaLoaiPhong == maLoaiPhong).FirstOrDefault();
